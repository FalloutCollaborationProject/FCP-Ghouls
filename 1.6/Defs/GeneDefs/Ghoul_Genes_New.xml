<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <GeneDef>
        <defName>FCP_Gene_ToxicHealing</defName>
        <label>toxic metabolism</label>
        <description>Carriers have adapted to convert toxic buildup into healing energy. Their bodies use radiation and toxins as fuel for regeneration. They are completely immune to toxic damage.</description>
        <geneClass>FCP_Ghoul.Gene_ToxicHealing</geneClass>
        <iconPath>UI/Icons/Genes/FCP_Gene_Ghoul_Toxic_Heal</iconPath>
        <displayCategory>Miscellaneous</displayCategory>
        <displayOrderInCategory>500</displayOrderInCategory>
        <biostatCpx>1</biostatCpx>
        <biostatMet>-2</biostatMet>
        <statOffsets>
            <ToxicResistance>1</ToxicResistance>
            <ToxicEnvironmentResistance>1</ToxicEnvironmentResistance>
        </statOffsets>
    </GeneDef>

    <GeneDef>
        <defName>FCP_Gene_Ferality</defName>
        <label>ferality</label>
        <description>Carriers slowly lose their mind over time. Without regular chemical intervention, they will eventually go feral and become hostile. Certain drugs can temporarily reduce ferality.</description>
        <geneClass>FCP_Ghoul.Gene_Ferality</geneClass>
        <iconPath>UI/Icons/Genes/FCP_Gene_Ghoul_Toxic_Heal</iconPath>
        <displayCategory>Miscellaneous</displayCategory>
        <displayOrderInCategory>501</displayOrderInCategory>
        <biostatCpx>2</biostatCpx>
        <biostatMet>-1</biostatMet>
        <modExtensions>
            <li Class="FCP_Ghoul.FeralityGene_ModExtension">
                <increaseIntervalTicks>60000</increaseIntervalTicks>
                <feralityIncreaseAmount>1</feralityIncreaseAmount>
                <amountReducedPerDrug>20</amountReducedPerDrug>
                <initialFerality>0</initialFerality>
                <drugs>
                    <li>GoJuice</li>
                    <li>Penoxycyline</li>
                    <li>WakeUp</li>
                </drugs>
            </li>
        </modExtensions>
    </GeneDef>

    <!-- Ghoul Skin Color Variants -->

    <GeneDef Name="GhoulSkinBase" Abstract="True">
        <label>ghoul skin</label>
        <description>Carriers have the rotting, irradiated flesh characteristic of ghouls.</description>
        <geneClass>FCP_Ghoul.Gene_GhoulBody</geneClass>
        <iconPath>UI/Icons/Genes/Gene_FireSpew</iconPath>
        <displayCategory>Miscellaneous</displayCategory>
        <displayOrderInCategory>502</displayOrderInCategory>
        <biostatCpx>0</biostatCpx>
        <biostatMet>0</biostatMet>
        <exclusionTags>
            <li>HairStyle</li>
            <li>Fur</li>
            <li>GhoulSkin</li>
        </exclusionTags>
        <hairTagFilter>
            <whitelist>true</whitelist>
            <tags>
                <li>Bald</li>
            </tags>
        </hairTagFilter>
        <forcedHeadTypes>
            <li>FCP_Male_Ghoul_Average_Normal</li>
            <li>FCP_Male_Ghoul_Average_Pointy</li>
            <li>FCP_Male_Ghoul_Average_Wide</li>
            <li>FCP_Male_Ghoul_Narrow_Normal</li>
            <li>FCP_Male_Ghoul_Narrow_Pointy</li>
            <li>FCP_Male_Ghoul_Narrow_Wide</li>
            <li>FCP_Female_Ghoul_Average_Normal</li>
            <li>FCP_Female_Ghoul_Average_Pointy</li>
            <li>FCP_Female_Ghoul_Average_Wide</li>
            <li>FCP_Female_Ghoul_Narrow_Normal</li>
            <li>FCP_Female_Ghoul_Narrow_Pointy</li>
            <li>FCP_Female_Ghoul_Narrow_Wide</li>
        </forcedHeadTypes>
    </GeneDef>

