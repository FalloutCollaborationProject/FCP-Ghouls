    <!--_____ Ghouls _____-->

    <!-- Feral Ghoul -->

    <PawnKindDef ParentName="FCP_GhoulkindBase">
        <defName>FCP_Pawnkind_Ghoul_Feral</defName>
        <label>feral ghoul</label>
        <combatPower>45</combatPower>
        <xenotypeSet>
            <xenotypeChances>
                <FCP_Xenotype_Ghoul_Feral>1</FCP_Xenotype_Ghoul_Feral>
            </xenotypeChances>
        </xenotypeSet>
        <useFactionXenotypes>false</useFactionXenotypes>
        <itemQuality>Poor</itemQuality>
        <gearHealthRange>0.2~0.7</gearHealthRange>
        <apparelMoney>0~200</apparelMoney>
        <apparelTags>
            <li>FCP_Wastelander_Apparel</li>
        </apparelTags>
        <apparelAllowHeadgearChance>0.1</apparelAllowHeadgearChance>
        <weaponMoney>0</weaponMoney>
        <disallowedTraits />
        <requiredWorkTags />
        <initialWillRange>0~0</initialWillRange>
        <initialResistanceRange>0~0</initialResistanceRange>
        <backstoryFiltersOverride>
            <li>
                <categoriesChildhood>
                    <li>FCP_Backstory_Wastelander_Child</li>
                </categoriesChildhood>
                <categoriesAdulthood>
                    <li>FCP_Backstory_Ghoul</li>
                </categoriesAdulthood>
            </li>
        </backstoryFiltersOverride>
    </PawnKindDef>

